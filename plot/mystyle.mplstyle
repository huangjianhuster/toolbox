# mystyle.mplstyle

# Set the default font size to 14
font.size: 14
font.family: Arial

# Set the grid style
axes.grid: True
grid.linestyle: --
grid.linewidth: 0.8
grid.alpha: 0.75

# Set the font size
axes.labelsize: 14
axes.titlesize: 16
xtick.labelsize: 14
ytick.labelsize: 14
legend.fontsize: 14

# line style
lines.linewidth: 2.0

# define border style
axes.linewidth: 2.0

# legend settings
legend.frameon: False
# legend.fancybox: True
legend.facecolor: 'none'
legend.edgecolor: 'none'

# error bars
errorbar.capsize: 2

# bar plot
patch.linewidth: 1
patch.edgecolor: 'gray'

# other options
figure.autolayout: True
xtick.direction: in
xtick.major.size: 8
xtick.major.pad: 8
ytick.direction: in
ytick.major.size: 8
ytick.major.pad: 8
